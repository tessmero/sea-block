{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "src",
    "target": "es2022",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "strictNullChecks": true, 
    "resolveJsonModule": true,
    
    // classes must define readonly properties in constructor
    "strictPropertyInitialization": true,
  },
  "include": ["src"]
}