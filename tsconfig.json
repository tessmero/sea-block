{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2015",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "strictNullChecks": true, 
    
    // classes must define readonly properties in constructor
    "strictPropertyInitialization": true,
  },
  "include": ["src"]
}